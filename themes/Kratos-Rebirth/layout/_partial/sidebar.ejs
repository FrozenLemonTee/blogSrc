<% const needSplit = theme.widgets.includes('splitter') && (is_post() || is_page()); %>
<% const showToc = page.toc && strip_html(toc(page.content)); %>
<section id="kratos-widget-area" class="col-md-4 hidden-xs hidden-sm sticky-area">
    <!-- 文章和页面根据splitter来分割，没有的话就从头开始设置为sticky -->
    <% if (!needSplit) { %>
        <div class="sticky-area-disabled">
    <% } %>
    <!-- 这里现在还是个坑 -->
    <% theme.widgets.forEach(function(widget){
        switch (widget) {
            case 'toc':
                if (showToc) { %>
                    <%- partial('_widget/toc') %>
                <% }
            break;
            case 'splitter':
                if (needSplit) { %>
                    <div class="sticky-area-disabled">
                <% }
            break;
            default: %>
                <%- partial('_widget/' + widget) %>
            <% break;
        }
    }) %>
    </div>
</section>
